<launch>
    <!-- <let name="urdf_path" 
    value="$(find-pkg-share slambot_description/urdf/slambot_urdf.xacro)"/> -->
   
     <!-- Chemin vers le package -->
   <let name="slambot_description_share"
       value="$(find-pkg-share slambot_description)" />

   <let name="slambot_bringup_share"
       value="$(find-pkg-share slambot_bringup)" />

  <!-- Chemin complet vers l'URDF -->
   <let name="urdf_path"
       value="$(var slambot_description_share)/urdf/slambot_urdf.xacro" />

  <let name="rviz_config_file_path" 
       value="$(var slambot_description_share)/rviz/slam_config.rviz"/>
       
   
   <node pkg="robot_state_publisher" exec="robot_state_publisher">
   <param name="robot_description" value="$(command 'xacro $(var urdf_path)')"/>
   </node>

    <node pkg="controller_manager" exec="ros2_control_node">
    <param from="$(var slambot_bringup_share)/config/slambot_controllers.yaml"/>
    </node>

    <node pkg="controller_manager" exec="spawner" args="joint_state_broadcaster"/>

    <node pkg="controller_manager" exec="spawner" args="diff_drive_controller"/>


    <!-- <node pkg="joint_state_publisher_gui" exec="joint_state_publisher_gui"/> -->

    <!-- <node pkg="teleop_twist_joy" exec="teleop_node" name="teleop_twist_joy">
      <remap from="joy" to="/commands"/>
    <param from="$(var slambot_bringup_share)/config/joy.yaml"/>
    </node> -->

    <node pkg="rviz2" exec="rviz2" output="screen" 
          args="-d $(var rviz_config_file_path)"/>

</launch>