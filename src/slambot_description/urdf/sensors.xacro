<?xml version="1.0" ?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

<xacro:property name="camera_length" value="0.0415"/>
<xacro:property name="camera_width" value="0.044"/>
<xacro:property name="camera_height" value="0.041"/>

<xacro:property name="gps_length" value="0.035"/>
<xacro:property name="gps_width" value="0.025"/>
<xacro:property name="gps_height" value="0.002"/>

<xacro:property name="imu_length" value="0.02"/>
<xacro:property name="imu_width" value="0.015"/>
<xacro:property name="imu_height" value="0.002"/>

<xacro:property name="lidar_length" value="0.041"/>
<xacro:property name="lidar_radius" value="0.03"/>


<link name="camera_link">
<visual>
 <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
        <box size="${camera_length} ${camera_width} ${camera_height}"/>
    </geometry>
    <material name="silver"/>
</visual>
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
        <box size="${camera_length} ${camera_width} ${camera_height}"/>
    </geometry>
  </collision>
  <xacro:box_inertia m="0.2" x="${camera_length}" y="${camera_width}" z="${camera_height}" o_xyz="0 0 0" o_rpy="0 0 0"/>
</link>

<link name="camera_optical_link"/>


<link name="gps_link">
<visual>
 <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
        <box size="${gps_length} ${gps_width} ${gps_height}"/>
    </geometry>
    <material name="silver"/>
</visual>
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
        <box size="${gps_length} ${gps_width} ${gps_height}"/>
    </geometry>
  </collision>
    <xacro:box_inertia m="0.01" x="${gps_length}" y="${gps_width}" z="${gps_height}" o_xyz="0 0 0" o_rpy="0 0 0"/>
</link>

<link name="imu_link">
<visual>
 <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
         <box size="${imu_length} ${imu_width} ${imu_height}"/>
    </geometry>
    <material name="silver"/>
</visual>
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
         <box size="${imu_length} ${imu_width} ${imu_height}"/>
    </geometry>
  </collision>
    <xacro:box_inertia m="0.01" x="${imu_length}" y="${imu_width}" z="${imu_height}" o_xyz="0 0 0" o_rpy="0 0 0"/>
</link>

<link name="lidar_link">
<visual>
 <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
     <cylinder length="0.041" radius="0.03"/>
    </geometry>
    <material name="silver"/>
</visual>
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
     <cylinder length="0.041" radius="0.03"/>
    </geometry>
  </collision>
    <xacro:cylinder_inertia m="0.1" radius="${lidar_radius}" length="${lidar_length}" o_xyz="0 0 0" o_rpy="0 0 0"/>
</link>


<joint name="camera_joint" type="fixed">
  <origin xyz="0.07 0.0 0.09" rpy="0 0 0"/>
  <parent link="base_link"/>
  <child link="camera_link"/>
</joint>

<joint name="camera_optical_joint" type="fixed">
  <origin xyz="0.0 0.0 0.0" rpy="${-pi/2} 0 ${-pi/2}"/>
  <parent link="camera_link"/>
  <child link="camera_optical_link"/>
</joint>

<joint name="gps_joint" type="fixed">
  <origin xyz="0.0 0.0 0.065" rpy="0 0 0"/>
  <parent link="base_link"/>
  <child link="gps_link"/>
</joint>

<joint name="imu_joint" type="fixed">
  <origin xyz="0.0 0.0 0.07" rpy="0 0 0"/>
  <parent link="base_link"/>
  <child link="imu_link"/>
</joint>

<joint name="lidar_joint" type="continuous">
  <origin xyz="0.0 0.0 0.18" rpy="0 0 0"/>
  <parent link="base_link"/>
  <child link="lidar_link"/>
  <axis xyz="0 0 1"/>
</joint>

</robot>